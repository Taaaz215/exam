<div class="row justify-content-center">
    {% for ecole in ecoles %}
        <div class="col-sm-2">
            <div class="card">

                <div class="card-body">
                    <p class="card-text">
                        {{ etudiant.nom }}
                        <br>
                        {{ etudiant.prenom }}
                        <br>

                        <br>
                        <a type="button" class="btn btn-outline-primary btn-sm mt-2" href="{{ path("ecole", {id: ecole.id}) }}" role="button">Consulter</a>
                    </p>
                </div>
            </div>
        </div>
    {% endfor %}
</div>